{
  "$schema": "shell/node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "projects": {

    "micro1": {
      "projectType": "application",
      "schematics": {},
      "root": "micro1",
      "sourceRoot": "micro1/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "federationConfig": "federation.config.js"
          },
          "configurations": {
            "production": {
              "target": "micro1:esbuild:production"
            },
            "development": {
              "target": "micro1:esbuild:development",
              "dev": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-architects/native-federation:build",
          "options": {
            "target": "micro1:serve-original:development",
            "rebuildDelay": 0,
            "dev": true,
            "port": 4201
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "micro1/tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "micro1/public"
              }
            ],"styles": [
              "shell/src/styles.css"
            ],


            "scripts": []
          }
        },
        "esbuild": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/micro1",
            "index": "micro1/src/index.html",
            "browser": "micro1/src/main.ts",
            "polyfills": [
              "zone.js",
              "es-module-shims"
            ],
            "tsConfig": "micro1/tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "micro1/public"
              }
            ],"styles": [
              "shell/src/styles.css"
            ],


            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve-original": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "micro1:esbuild:production"
            },
            "development": {
              "buildTarget": "micro1:esbuild:development"
            }
          },
          "defaultConfiguration": "development",
          "options": {
            "port": 4201
          }
        }
      }
    }

  }
}
